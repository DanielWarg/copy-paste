# Copy/Paste Core - Environment Variables Template
# Copy this file to .env and fill in your values

# Database (optional - app can start without DB)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/copypaste

# PostgreSQL (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=copypaste
POSTGRES_PORT=5432

# Backend
BACKEND_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_SAMPLE_RATE=1.0

# Features
ENABLE_META=false

# Database Health Check
DB_HEALTH_TIMEOUT_SECONDS=2.0

# CORS (comma-separated list of allowed origins)
# Include both Vite default (5173) and legacy (3000) for compatibility
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Debug Mode
DEBUG=false

# Build Info (optional, set by CI/CD)
BUILD_ID=local
GIT_COMMIT=unknown
